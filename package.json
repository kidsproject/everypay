{
  "name": "@kidsproject/everypay",
  "version": "2.0.0",
  "description": "EveryPay payment gateway REST API adapter for JavaScript/NodeJS",
  "main": "src/index.js",
  "scripts": {
    "test": "mocha || true",
    "test-result": "mocha",
    "deploy": "npm publish --access-public",
    "deploy-dry": "npm publish --access-public --dry-run",
    "prettier": "prettier \"**/*.{json,md,scss,yaml,yml,js}\" --write",
    "lint": "eslint ./ --ignore-path .gitignore --ignore-pattern internals/scripts --fix",
    "lint:fix": "npm run lint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kidsproject/everypay.git"
  },
  "keywords": [
    "everypay",
    "payments",
    "api"
  ],
  "author": {
    "name": "Christos Lytras",
    "email": "christos.lytras@gmail.com",
    "url": "https://lytras.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kidsproject/everypay/issues"
  },
  "homepage": "https://github.com/kidsproject/everypay#readme",
  "dependencies": {
    "base-64": "^0.1.0",
    "form-urlencoded": "^3.0.1",
    "node-fetch": "^2.6.0",
    "qs": "^6.7.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "colors": "^1.3.3",
    "dotenv": "^8.0.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-prettier": "3.1.0",
    "faker": "^4.1.0",
    "fs-extra": "^8.1.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0",
    "mocha": "^6.1.4",
    "prettier": "^1.18.2",
    "supports-color": "^7.0.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,scss,yaml,yml,js}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "exports": {
    "./*": "./src/*.js"
  }
}
